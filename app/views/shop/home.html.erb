<% provide(:title, "home") %>
<div class="center jumbotron">
<div class="container">
<div class="row" >
<div class="col-xs-12">
<%= link_to image_tag(@sample.image1), @sample %>
</div>
</div>
</div>

<div class="container">
<div class="row" >
<div class="col-xs-8">
<p><%= @sample.name %></p>
<p><%= @sample.price %></p>
</div>

<div class="col-xs-3">
<%= form_for @saved do |form| %>
  <div class="field">
    <%= form.number_field :product_id, id: :saved_product_i, :value => @sample.id, :style => "display:none" %>
  </div>
    <div class="actions">
    <%= form.submit 'save' %>
  </div>
<% end %>
</div>
</div>
</div>
</div>



<div class="center jumbotron">
<div class="container" style= "padding-top:50px;">
<div class="row" >
<div class="col-xs-6">
<h1>Popular</h1>
</div>
<div class="col-xs-6" style= "padding-top:50px; font-size:30px"><%= link_to "see all+",  {:controller => "shop", :action => "all"} %>
</div>
</div>
</div>


<div class="container" style= "padding-top:50px;" >
 <div class="row" >
        <% @popular.each do |product| %>
      <div class="col-xs-6 col-sm-3">
        <%= link_to image_tag(product.image1), product %>
            <p><%= product.name %></p>
            <p>$<%= product.price %></p>
        </div>
          <% end %>
    </div>
</div>
</div>

<div class="center jumbotron">
<div class="container" style= "padding-top:50px;">
<div class="row" >
<div class="col-xs-6">
<h1>Collection</h1>
</div>
<div class="col-xs-6" style= "padding-top:50px; font-size:30px"><%= link_to "see all+",  {:controller => "shop", :action => "all"} %>
</div>
</div>
</div>


<div class="container" style= "padding-top:50px;" >
 <div class="row" >
