        <%= link_to image_tag("banner"), {:controller => "shop", :action => "women"} %>
        <p>women</p>
        </div>
        <div class="col-xs-6 col-sm-3">
        <%= link_to image_tag("banner"), {:controller => "shop", :action => "men"} %>
        <p>men</p>
        </div>
        <div class="col-xs-6 col-sm-3">
        <%= link_to image_tag("banner"), {:controller => "shop", :action => "kids"} %>
        <p>kids</p>
