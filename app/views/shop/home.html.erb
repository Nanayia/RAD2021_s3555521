        <%= link_to image_tag("banner"), {:controller => "shop", :action => "new_in"} %>
        <p>New-ins</p>
        </div>
        
    </div>
</div>
</div>

<div class="center jumbotron">
<div class="container">
<div class="row" >


<%= form_for @newsletter do |form| %>
<%= render 'shared/error_email' %>
  <div class="field">
<h1>Newsletter</h1>
<p>signup with our newsletter</p>
    <%= form.text_field :email, id: :newsletter_email %>
  </div>
    <div class="actions">
    <%= form.submit 'Confirm' %>
  </div>
<% end %>
</div>
</div>
</div>
